{{!-- Main Search body --}}
<div class="row search-row">
    <div class="col-sm-3 text-center">
        <div class="box">
            <div class="box-content">
                <h3 class="tag-title">HELP US GROW!</h3>
                <hr />
                <p>Please go to our Go-fund-me page to keep our site going
                </p>
                <a href="https://www.gofundme.com/delta32org?sharetype=teams&member=173296&rcid=r01-152636415652-95db6a5758694bab&pc=ot_co_campmgmt_w"
                    target="_blank" class="btn btn-block btn-primary">Go Fund Us</a>
            </div>
        </div>
        <br>
        <br>
        <div class="box">
            <div class="box-content">
                <h3 class="tag-title">FOLLOW US!</h3>
                <hr />
                <a href="https://www.facebook.com" target="_blank">
                    <i class="fab fa-facebook-square media-logo"></i>
                </a>
                <a href="https://www.twitter.com" target="_blank">
                    <i class="fab fa-twitter-square media-logo"></i>
                </a>
                <a href="https://www.github.com" target="_blank">
                    <i class="fab fa-github-square media-logo"></i>
                </a>

            </div>
        </div>
    </div>
    {{!-- RESULTS COLUMN --}}
    <div class="col-sm-6" id="results_display">
        <h2 class="text-center mt-3">Search Results</h2>
        <hr> {{#if videos}}
        <ul>{{#each videos}}
            <li>
                <div class="box">
                    <div class="box-content">
                        <h3 class="video-link vid-title" value={{this.id}}>{{this.title}}</h3>
                        <p class="video-link vid-desc" }>{{this.description}}</p>
                    </div>
                </div>

            </li>
            {{/each}}
        </ul>
        {{else}}
        <div class="box">
            <div class="box-content no-results">
                <h3>Sorry we didn't find any videos.</h3>
                <h3 class="no-results">try again!</h3>
            </div>
        </div>
        {{/if}}
    </div>
    <div class="col-sm-3 text-center">
        <div class="box">
            <div class="box-content">
                <h3 class="tag-title">BE A CONTRIBUTOR!</h3>
                <hr />
                <p>If you have the great knowledge to share, be a part of this change!
                </p>
                <a href="#" class="btn btn-block btn-primary">Learn more</a>
            </div>
        </div>
    </div>
</div>
